#!/usr/bin/env node

if (process.argv.length != 3) {
	console.warn('You need to give the command name you are interested in.');
	process.exit(1);
}

var fs = require('fs');
var path = require('path');

var command_name = process.argv[2];
var readme_path = path.join(__dirname, '../command', command_name, 'README.md');
var stream = fs.createReadStream(readme_path);

stream.on('error', function (err, data) {
	console.warn('No documentation for ' + command_name);
	process.exit(1);
});

stream.pipe(process.stdout);
